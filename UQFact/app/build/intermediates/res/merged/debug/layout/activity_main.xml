        <!--android:id="@+id/resultTextView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text=""-->
        <!--android:layout_weight="0.06" />-->

</LinearLayout>